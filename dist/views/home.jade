-
  list = [{"name":"Docs"},{"name":"Home"}]

doctype html
html(lang="en")
  head
    title= message
    link(href='/bower_components/angular-material/angular-material.min.css',rel='stylesheet')
    style
      include home.css
    link(href='/bower_components/angular-material-data-table/dist/md-data-table.min.css',rel='stylesheet')
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons',rel='stylesheet')
    script(src='/bower_components/angular/angular.min.js')
    script(src='/bower_components/angular-animate/angular-animate.min.js')
    script(src='/bower_components/angular-aria/angular-aria.min.js')
    script(src='/bower_components/angular-ui-router/release/angular-ui-router.min.js')
    script(src='/bower_components/angular-material/angular-material.min.js')
    script(src='/bower_components/underscore/underscore-min.js')
    script(src='/bower_components/angular-material-data-table/dist/md-data-table.min.js')
    style
      include home.css
    script
      include app.js
      include services/collectionsFactory.js
      include controllers/collectionsCtrl.js
      include controllers/tableCtrl.js
    
  body(layout="column",ng-app="heypi")
    div.header
    md-toolbar(layout="row")
      div.md-toolbar-tools
        md-button(ng-click="vm.toggleSidenav('left')", hide-gt-sm class="md-icon-button")
          md-icon(md-font-set="material-icons") menu
        h1 HeyPI
        span(flex)
        md-menu(md-position-mode="target-right target")
          md-button(aria-label="Open demo menu",class="md-icon-button",ng-click="$mdOpenMenu($event)",style="color:white") user
          md-menu-content(width="4")
            md-menu-item(ng-repeat="item in [1, 2, 3]")
              md-button(ng-click="ctrl.announceClick($index)")
                  div(layout="row")
                    p(flex) Option {{item}}
                    md-icon(md-menu-align-target md-svg-icon="call:portable-wifi-off",style="margin: auto 3px auto 0;")

    div(flex, layout="row")
      md-sidenav(layout='column',md-component-id="left",md-is-locked-open="$mdMedia('gt-sm')").md-sidenav-left.md-whiteframe-4dp
        md-button(ui-sref="collections").md-accent.md-raised collections
        md-button(ui-sref="docs").md-accent.md-raised documentaion
        md-button.md-accent.md-raised user management
        md-button.md-accent.md-raised usage stats
      div(layout="column", flex, id="content",ui-view="")
      
        
  
